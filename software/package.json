{
  "name": "@platforma-open/milaboratories.run-diff-clonotype-abundance-deseq2-r.software",
  "version": "1.14.1",
  "type": "module",
  "description": "Block Software: Run DESeq2 with R",
  "scripts": {
    "build": "pl-pkg build",
    "prepublishOnly": "pl-pkg prepublish",
    "do-pack": "rm -f *.tgz && pl-pkg build && pnpm pack && mv platforma-open*.tgz package.tgz",
    "changeset": "changeset",
    "version-packages": "changeset version"
  },
  "block-software": {
    "entrypoints": {
      "clonotype-deseq": {
        "binary": {
          "artifact": {
            "type": "R",
            "registry": "platforma-open",
            "environment": "@platforma-open/milaboratories.runenv-r-differential-expression:main",
            "root": "./src/deseq2-clonotype"
          },
          "cmd": [
            "Rscript",
            "{pkg}/clonotype_deseq2.R"
          ]
        },
        "docker": {
          "artifact": {
            "type": "docker",
            "context": "./src/deseq2-clonotype",
            "dockerfile": "Dockerfile"
          },
          "cmd": [
            "/app/clonotype_deseq2.R"
          ]
        }
      },
      "gene-deseq": {
        "binary": {
          "artifact": {
            "type": "R",
            "registry": "platforma-open",
            "environment": "@platforma-open/milaboratories.runenv-r-differential-expression:main",
            "root": "./src/deseq2-gene"
          },
          "cmd": [
            "Rscript",
            "{pkg}/gene_deseq2.R"
          ]
        },
        "docker": {
          "artifact": {
            "type": "docker",
            "context": "./src/deseq2-gene",
            "dockerfile": "Dockerfile"
          },
          "cmd": [
            "/app/gene_deseq2.R"
          ]
        }
      },
      "prev-checks": {
        "binary": {
          "artifact": {
            "type": "python",
            "registry": "platforma-open",
            "environment": "@platforma-open/milaboratories.runenv-python-3:3.12.10",
            "dependencies": {
              "toolset": "pip",
              "requirements": "requirements.txt"
            },
            "root": "./src/prev-checks"
          },
          "cmd": [
            "python",
            "{pkg}/prevChecks.py"
          ]
        }
      }
    }
  },
  "devDependencies": {
    "@platforma-open/milaboratories.runenv-r-differential-expression": "catalog:",
    "@platforma-sdk/package-builder": "catalog:",
    "@platforma-open/milaboratories.runenv-python-3": "catalog:"
  }
}